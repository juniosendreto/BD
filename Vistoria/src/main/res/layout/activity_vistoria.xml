            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passo8LL"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de moradias em risco"
                    android:id="@+id/numeroMoradiasRiscoTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/numeroMoradiasRiscoET"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimativa do número de pessoas para remoção"
                    android:id="@+id/quatidadeRemocaoTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/quantidadeRemocaoET"
                    android:inputType="number" />

            </LinearLayout>

        <!-- *********** Passo 8 - Necessidade de remoção ******** -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSO 9 - OUTRAS INFORMAÇÕES"
            android:id="@+id/passo9TV"
            android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passo9LL"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/outrasInformacoesET" />
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/salvarVistoriaB"
                android:text="Salvar Vistoria" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
