<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context="bancodados.test.view.VistoriaActivity"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/scrollView"
            android:layout_centerHorizontal="true">

            <!-- *********** Passo 1 - DADOS GERAIS SOBRE MORADIA ******** -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="PASSO 1 - DADOS GERAIS SOBRE A MORADIA "
                android:id="@+id/passo1TV"
                android:textStyle="bold" />
            <!--android:drawableRight="@mipmap/erro"-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passo1LL"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Município"
                    android:id="@+id/municioTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/municipioET" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bairro"
                    android:id="@+id/bairroTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bairroET" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome de moradores"
                    android:id="@+id/nomeMoradorTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomeMoradorET" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condições de acesso à área"
                    android:id="@+id/condicoesAreaTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/condicoesAreaET" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condições de acesso a não informada"
                    android:textColor="#ff2b40"
                    android:id="@+id/condicoesAreaReportTV"
                    android:layout_above="@id/condicoesAreaET"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipos de moradias"
                    android:id="@+id/tiposMoradiasTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tiposMoradiasRG"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alvenaria"
                        android:id="@+id/alvenariaRB"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/madeiraRB"
                        android:text="Madeira" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mistoRB"
                        android:text="Misto (alvenaria e madeira)" />
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipos de Moradias não informado!"
                    android:textColor="#ff2b40"
                    android:id="@+id/tiposMoradiasReportTV"
                    android:layout_above="@id/tiposMoradiasRG"/>

            </LinearLayout>

            <!-- *********** Passo 2 - CARACTERIZAÇÃO DO LOCAL ******** -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSO 2 - CARACTERIZAÇÃO DO LOCAL"
                android:id="@+id/passo2TV"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passo2LL"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:orientation="vertical"
                android:visibility="gone">

                <!--  **Encosta Natural** -->

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/encostaCB"
                    android:text="Encosta Natural" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/encostaLL"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura em metros"
                        android:id="@+id/alturaEncostaTV" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/alturaEncostaET"
                        android:inputType="number" />

                    <ImageButton
                        android:id="@+id/chamarCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/camera25"
                        android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura da Encosta Natural não informada!"
                        android:textColor="#ff2b40"
                        android:id="@+id/alturaEncostaReportTV"
                        android:layout_above="@id/alturaEncostaET"
                        android:visibility="gone"/>

                    <!-- Recurso de imagens -->
                </LinearLayout>

                <!--  **Talude de Corte** -->

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/taludeCB"
                    android:text="Talude de Corte" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/taludeLL"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura em metros"
                        android:id="@+id/alturaTaludeTV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/alturaTaludeET"
                        android:inputType="number" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura do Talude de corte não informada!"
                        android:textColor="#ff2b40"
                        android:id="@+id/alturaTaludeReportTV"
                        android:layout_above="@id/alturaTaludeET"
                        android:visibility="gone"/>

                    <!-- Recurso de imagens -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distância da moradia da base da encosta/talude em metros"
                        android:id="@+id/distanciaBaseTaludeTV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/distanciaBaseTaludeET"
                        android:inputType="number" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distância da moradia da base da encosta/talude não informada!"
                        android:textColor="#ff2b40"
                        android:id="@+id/distanciaBaseTaludeReportTV"
                        android:layout_above="@id/distanciaBaseTaludeET"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distancia da moradia do topo da encosta/talude"
                        android:id="@+id/alturaTopoTaludeTV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/alturaTopoTaludeET"
                        android:inputType="number" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distancia da moradia do topo da encosta/talude não informada!"
                        android:textColor="#ff2b40"
                        android:id="@+id/alturaTopoEncostaReportTV"
                        android:layout_above="@id/alturaTopoTaludeET"
                        android:visibility="gone"/>

                </LinearLayout>

                <!-- Aterro Lançado -->

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aterroCB"
                    android:text="Aterro Lançado" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/aterroLL"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura em metros"
                        android:id="@+id/alturaAterroTV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/alturaAterroET"
                        android:inputType="number" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura do Aterro Lançado não informada!"
                        android:textColor="#ff2b40"
                        android:id="@+id/alturaAterroReportTV"
                        android:layout_above="@id/alturaAterroET"
                        android:visibility="gone"/>

                    <!-- Recurso de imagens -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distância da moradia da base do aterro em metros"
                        android:id="@+id/distanciaBaseAterroTV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/distanciaBaseAterroET"
                        android:inputType="number" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distância da moradia da base do aterro não informada!"
                        android:textColor="#ff2b40"
                        android:id="@+id/distanciaBaseAterroReportTV"
                        android:layout_above="@id/distanciaBaseAterroET"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distancia da moradia do topo do aterro"
                        android:id="@+id/alturaTopoAterroTV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/alturaTopoAterroET"
                        android:inputType="number" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distancia da moradia do topo do aterro não informada!"
                        android:textColor="#ff2b40"
                        android:id="@+id/alturaTopoAterroReportTV"
                        android:layout_above="@id/alturaTopoAterroET"
                        android:visibility="gone"/>

                </LinearLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/paredeCB"
                    android:text="Presença de Parede Rochosa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paredeLL"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura em metros"
                        android:id="@+id/alturaParedeTV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/alturaParedeET"
                        android:inputType="number" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura da parede rochosa não informada!"
                        android:textColor="#ff2b40"
                        android:id="@+id/alturaParedeReportTV"
                        android:layout_above="@id/alturaParedeET"
                        android:visibility="gone"/>
                    <!-- Recurso de imagens -->

                </LinearLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blocosRochasCB"
                    android:text="Presença de blocos de rocha e matacões" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lixoEntulhoCB"
                    android:text="Presença de lixo/entulho" />

            </LinearLayout>

            <!-- *********** Passo 3 - ÁGUA ******** -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSO 3 - ÁGUA"
                android:id="@+id/passo3TV"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passo3LL"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:orientation="vertical"
                android:visibility="visible">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/concentracaoAguaCB"
                    android:text="Concentração de água de chuva em superfície (enxurrada)" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lancamentoAguaCB"
                    android:text="Lançamento de água servida em superfície(a céu aberto ou no quintal)" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sistema de drenagem superficial"
                    android:id="@+id/drenagemSuperficialTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/drenagemSuperficialRG"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inexistente"
                        android:id="@+id/inexistenteRB"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/precarioRB"
                        android:text="Precário" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/satisfatorioRB"
                        android:text="Satisfatorio" />
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sistema de drenagem superficial não informada"
                    android:textColor="#ff2b40"
                    android:id="@+id/drenagemSuperficialReportTV"
                    android:layout_above="@id/drenagemSuperficialRG"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para onde vai o esgoto?"
                    android:id="@+id/idaEsgotoTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idaEsgotoRG"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fossa"
                        android:id="@+id/fossaRB"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/canalizadoRB"
                        android:text="Canalizado" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/superficieRB"
                        android:text="Lançamento em superfície (céu aberto)" />
                </RadioGroup>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local onde o esgoto vai não informado"
                    android:textColor="#ff2b40"
                    android:id="@+id/idaEsgotoReportTV"
                    android:layout_above="@id/idaEsgotoRG"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De onde vem a água para uso na moradia?"
                    android:id="@+id/vindaAguaTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vindaAguaRG"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prefeitura/Concessionária"
                        android:id="@+id/prefeituraCRB"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mangueiraRB"
                        android:text="Mangueira" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local onde vem a água não informado"
                    android:textColor="#ff2b40"
                    android:id="@+id/vindaAguaReportTV"
                    android:layout_above="@id/vindaAguaRG"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Existe vazamento na tubulação?"
                    android:id="@+id/vazamentoTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vazamentoRG"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sim"
                        android:id="@+id/vazamentoSRB">

                    </RadioButton>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/vazamentoNRB"
                        android:text="Não"/>
                </RadioGroup>
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/vazamentoSNRG"
                    android:visibility="gone">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Esgoto"
                        android:id="@+id/vazamentoEsgotoRB"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/vazamentoAguaRB"
                        android:text="Agua" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Existência de vazamento não informada"
                    android:textColor="#ff2b40"
                    android:id="@+id/vazamentoReportTV"
                    android:layout_above="@id/vazamentoRG"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de vazamento não informada"
                    android:textColor="#ff2b40"
                    android:id="@+id/vazamentoEAReportTV"
                    android:layout_above="@id/vazamentoRG"
                    android:visibility="gone"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minas d'água no barranco (talude)"
                    android:id="@+id/minasAguaTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No pé"
                        android:id="@+id/peRB"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/meioRB"
                        android:text="No meio" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/topoTaludeRB"
                        android:text="Topo do talude ou aterro" />

                </RadioGroup>
            </LinearLayout>

            <!-- *********** Passo 4 - Vegetação no talude ou proximidades ******** -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSO 4 - VEGETAÇÃO NO TALUDE OU PROXIMIDADES"
                android:id="@+id/passo4TV"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passo4LL"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:orientation="vertical"
                android:visibility="gone">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/presencaArvoresCB"
                    android:text="Presença de Árvores" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vegetacaoRasteiraCB"
                    android:text="Vegetação Rasteira" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/areaDesmatadaCB"
                    android:text="Área Desmatada" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área de Cultivo"
                    android:id="@+id/areaCultivoTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/areaCultivoET" />

